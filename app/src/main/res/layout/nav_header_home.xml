<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/nav_header_height"
              android:background="@color/mainColor"
              android:gravity="bottom"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/avatarImageV"
        android:layout_width="@dimen/px_200"
        android:layout_height="@dimen/px_200"
        android:layout_marginTop="@dimen/px_30"
        android:background="@drawable/bg_circle"
        android:padding="2px"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_avatar_default"/>

    <TextView
        android:id="@+id/userNameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/px_50"
        android:text="User Name"
        android:textSize="@dimen/usual_txt_size"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:id="@+id/introductionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduction."/>

</LinearLayout>
